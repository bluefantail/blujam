<header id="home">
  <div class="container table">
    <div id="splash-container" class="vert-align">
      <div id="splash" class="row">
        <div id="logo" class="five columns"></div>
        <div id="splash-text" class="seven columns">
          <div id="splash-title">BluJam</div>
          <div id="splash-info">
            <p>Victoria University of Wellington</p>
            <p>Rooms AM102 and AM104</p>
            <p>6pm Friday 20<sup>th</sup> - Sunday 22<sup>nd</sup> April 2018</p>
          </div>
        </div>
      </div>
      <a data-scroll class="button" href ="#enter">Enter Team</a>
    </div>
  </div>
  <!-- <div id="signup-status">Signups now open!</div> -->
</header>
<nav>
  <ul data-gumshoe>
    <li><a data-scroll href="#home" class="active">Home</a></li>
    <li><a data-scroll href="#about">About</a></li>
    <li><a data-scroll href="#enter">Enter</a></li>
    <li><a data-scroll href="#faq">FAQ</a></li>
    <li><a data-scroll href="#where">Where</a></li>
    <li><a data-scroll href="#contact">Contact</a></li>
  </ul>
</nav>
<div id="sections">
  <section id="about">
    <div class="container">
      <%= render 'about' %>
    </div>
  </section>

  <section id="enter">
    <div class="container">
      <%= render 'enter' %>
    </div>
  </section>

  <section id="faq">
    <div class="container">
      <h1>FAQ</h1>
      <div id="questions" class="row">
        <%= render 'faq' %>
      </div>
    </div>
  </section>
  <section id="where">
    <div class="container">
      <h1>Where is it?</h1>
      <p class="feature">
        BluJam is hosted in rooms 102 and 104 (opposite the WishBone cafe) of the Alan MacDiarmid building on the Kelburn campus of Victoria University of Wellington.
      </p>
      <div class="row">
        <div class="seven columns">
            <a id="map" href="/assets/map.png" target="_blank" title="View full image"></a>
        </div>
        <div class="five columns">
          <%= render 'where' %>
        </div>
      </div>
    </div>
  </section>
  <section id="contact">
    <div class="container">
      <h1>Got questions?</h1>
      <%= render 'contact' %>
    </div>
  </section>
  <section id="sponsors">
    <div class="container">
      <div class="sponsor large vec"></div>
      <!-- <a href="http://acidic.co.nz" target="_blank" class="sponsor acidic" data-tooltip="Site by Acidic"></a> -->
    </div>
  </section>
</div>
